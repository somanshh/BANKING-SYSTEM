<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link rel="stylesheet" href="/style.css">
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

    <title>Hello, world!</title>
</head>

<body>

    {{#if notMoney}}
        <div class="alert alert-warning alert-dismissible fade show" role="alert">
    <strong>Attention</strong> Not enough balance in your account. !!! You have only &#8377; {{notMoney}} in your account.
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
    {{/if}}

    {{#if notSender}}
        <div class="alert alert-warning alert-dismissible fade show" role="alert">
    <strong>Attention</strong> Email You entered was incorrect. !!! 
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
    {{/if}}

    {{#if sameEmail}}
        <div class="alert alert-warning alert-dismissible fade show" role="alert">
    <strong>Attention</strong> You can't send money to your own account. !!!
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
    {{/if}}

    <div class="container">
        <h1>Send Money To</h1>
        <div class="customer">
            <div class="card" style="width: 29rem;">
                <div class="card-body">
                <div class="profile-info"><h4>Name:</h4><h5>{{reciever.name}}</h5></div>                  
                <div class="profile-info"><h4>Email:</h4><h5>{{reciever.email}}</h5></div>                  
                <div class="profile-info"><h4>Balance:</h4><h5>&#8377;  {{reciever.currentBalance}}</h5></div>                  
                <form action="/api/v1/transfer/{{reciever._id}}" class="form" method="post">
                    <form>
                        <div class="mb-3">
                            <label for="exampleInputEmail1" class="form-label">Email address</label>
                            <input type="email" name="email" class="form-control" id="exampleInputEmail1"
                                aria-describedby="emailHelp" placeholder="Enter Your Email">
                        </div>
                        <div class="mb-3">
                            <label for="exampleInputPassword1" class="form-label">Enter Amount</label>
                            <input type="number" name="AmountTransfered" class="form-control" id="">
                        </div>

                        <button type="submit" class="btn btn-primary">Send Money</button>
                            <a class="btn btn-primary" href="/api/v1/customer/{{reciever._id}}" role="button">Cancel</a>
                    </form>
                </form>
                </div>
            </div>
        </div>

    </div>

    

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
        crossorigin="anonymous"></script>

 
</body>

</html>